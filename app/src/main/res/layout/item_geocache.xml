<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 主标题：Geocache 名称 -->
        <TextView
            android:id="@+id/geocache_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Geocache Name"
            android:textColor="#396034"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- 副标题：Geocache Code -->
        <TextView
            android:id="@+id/geocache_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Code: GC12345"
            android:textColor="#4F7149"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif" />

        <!-- 类型 -->
        <TextView
            android:id="@+id/geocache_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type: Traditional"
            android:textColor="#4F7149"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif" />

        <!-- 地点 -->
        <TextView
            android:id="@+id/geocache_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: Osaka Castle"
            android:textColor="#4F7149"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
