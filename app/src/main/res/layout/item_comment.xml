<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Header Row with username and right-aligned time -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="JohnDoe"/>

        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="#888888"
            android:textSize="12sp"
            tools:text="2 hours ago"/>
    </RelativeLayout>

    <!-- Comment Content -->
    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="#444444"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        tools:text="This is a sample comment text that might span multiple lines to show how the layout handles longer content."/>

    <!-- Rating -->
    <TextView
        android:id="@+id/tv_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="#396034"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="★★★★☆"/>

    <!-- Divider with optimized spacing -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#EEEEEE"/>
</LinearLayout>